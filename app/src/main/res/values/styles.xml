<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrincipalStyle">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SecondaryStyle">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="UserStyle" parent="PrincipalStyle">
        <item name="android:padding">20dp</item>
    </style>

    <style name="StyleTitle" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/jetbrains_mono_medium</item>
    </style>


</resources>