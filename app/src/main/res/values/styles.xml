<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrincipalStyle">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SecondaryStyle">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="fragmentsText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">"#0E0E0E"</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/jetbrains_mono_medium</item>
    </style>


    <style name="title">

        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="secondaryTitle">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="btn_primary">
        <item name="android:background">"#673AB7"</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/jetbrains_mono_medium</item>

    </style>

</resources>